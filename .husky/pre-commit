echo "🔍 Running pre-commit checks..."

# Check if there are any staged files
if git diff --cached --quiet; then
  echo "⚠️  No staged files to check"
  exit 0
fi

echo "📋 Running ESLint check..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ ESLint check failed. Please fix the issues and try again."
  echo "💡 You can run 'npm run lint:fix' to automatically fix some issues."
  exit 1
fi

echo "✅ ESLint check passed"

echo "🎨 Running Prettier format check..."
npm run format:check
if [ $? -ne 0 ]; then
  echo "❌ Prettier format check failed. Please format your code and try again."
  echo "💡 You can run 'npm run format' to automatically format your code."
  exit 1
fi

echo "✅ Prettier format check passed"

echo "🎉 All pre-commit checks passed! Proceeding with commit..."
